<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="9dp">





    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/uplogo"
            />

        <View    android:layout_width="0dp"    android:layout_height="0dp"    android:layout_weight="1" />


        <ImageButton
            android:id="@+id/Imbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />


    </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_________________"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/black"
                android:text="님 여기로 놀러가볼래요?"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

        <Button
            android:drawableBottom="@drawable/hanok_config"
            android:background="@drawable/round"
            android:id="@+id/button1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="전주한옥마을"

            />

            <Button
                android:layout_marginLeft="30dp"
                android:drawableBottom="@drawable/hanoknol_config"
                android:background="@drawable/round"
                android:id="@+id/button2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="전주한옥마을놀이터"

                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:layout_marginHorizontal="3dp"
                android:id="@+id/circle1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_circle_yellow"
                />

        <Button
            android:layout_marginHorizontal="3dp"
            android:id="@+id/circle2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_for_circle_button"
            />
            <Button
                android:layout_marginHorizontal="3dp"
                android:id="@+id/circle3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_for_circle_button"
                />



        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:text="_________________"
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <TextView

                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/pretendard_bold"
                android:text="님의 티켓확인"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="right"
            android:id="@+id/Imbutton2"
            android:layout_width="370dp"
            android:layout_height="220dp"
            android:background="@drawable/realticket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />



    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:layout_marginHorizontal="3dp"
                android:id="@+id/circle4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_circle_blue"
                />

            <Button
                android:layout_marginHorizontal="3dp"
                android:id="@+id/circle5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_for_circle_button"
                />
            <Button
                android:layout_marginHorizontal="3dp"
                android:id="@+id/circle6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_for_circle_button"
                />



        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
