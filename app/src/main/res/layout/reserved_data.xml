<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Ticket"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="351dp"
    android:layout_height="204dp"
    android:background="#fde08f"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/img_description"
        android:layout_width="202dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="165dp"
            android:layout_height="87.86dp"
            android:layout_marginTop="36dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            tools:srcCompat="@tools:sample/backgrounds/scenic[2]" />
        <TextView
            android:id="@+id/tv_placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="전주한옥레일바이크"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_placeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="PlaceLocation"
            android:textSize="10dp"
            android:textColor="#707070"
            android:fontFamily="@font/pretendard_medium"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket_description"
        android:layout_height="match_parent"
        android:layout_width="149dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="날짜"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:id="@+id/tv_ticketDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:text="2020.06.28 화"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="인원"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:id="@+id/tv_ticketParticipant"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:text="4명"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="금액"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:id="@+id/tv_TicketPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:text="33000원"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="입장시간 10분전까지 도착부탁립니다."
            android:textSize="8dp"/>
    </LinearLayout>
</LinearLayout>
